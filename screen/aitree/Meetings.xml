<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="component://moqui-ai/xsd/moqui-ai-screen.xsd"
        require-authentication="false" default-menu-title="Meetings" default-menu-index="2">
    
    <subscreens default-item="ActiveSessions">
        <subscreens-item name="ActiveSessions" location="component://aitree/screen/aitree/Meetings/ActiveSessions.xml" menu-title="Active" menu-index="1"/>
    </subscreens>
    
    <widgets>
        <container class="q-pa-lg">
            <container-row class="q-mb-md items-center">
                <row-col lg="8">
                    <label text="Staff Meetings" class="text-h4"/>
                    <label text="Coordination and planning for clinical teams." class="text-subtitle1 text-grey-7"/>
                </row-col>
            </container-row>
            
            <tabbar-page align="left" no-caps="true" class="text-grey-8 bg-grey-2 rounded-borders">
                <tab-page name="ActiveSessions" text="Active Sessions" icon="bolt" url="ActiveSessions"/>
                <tab-page name="History" text="Meeting History" icon="history" url="History"/>
            </tabbar-page>
            
            <container class="q-mt-md q-pa-md bg-white rounded-borders shadow-1">
                <subscreens-active/>
            </container>
        </container>
    </widgets>
</screen>
