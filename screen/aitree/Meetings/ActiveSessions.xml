<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="component://moqui-ai/xsd/moqui-ai-screen.xsd"
        require-authentication="false">
    
    <transition name="ActivateMeetingDialog">
        <default-response url="ActivateMeetingDialog"/>
    </transition>
    
    <subscreens>
        <subscreens-item name="ActivateMeetingDialog" location="component://aitree/screen/aitree/Meetings/ActivateMeetingDialog.xml"/>
    </subscreens>

    <widgets>
        <container class="q-py-md">
            <!-- Header Row with Dynamic Dialog Button -->
            <container-row class="items-center">
                <row-col md="8">
                    <label text="Active Meeting Sessions" class="text-h6 q-mb-xs"/>
                    <label text="Manage meetings that are currently in progress." class="text-body2 text-grey-8"/>
                </row-col>
                <row-col md="4" class="text-right">
                    <!-- Dynamic Dialog pointing to the transition that resolves the form blueprint -->
                    <dynamic-dialog id="ActivateMeetingDialog" button-text="Start New Meeting" transition="ActivateMeetingDialog" icon="add" width="800" title="Start Meeting"/>
                </row-col>
            </container-row>
            
            <q-separator class="q-my-md"/>
            
            <container class="q-mt-md">
                <banner class="bg-blue-1 text-blue-9 rounded-borders">
                    <template v-slot:avatar=""><q-icon name="info" color="blue-9" /></template>
                    <label text="No active meetings. Click 'Start New Meeting' to activate a scheduled session."/>
                </banner>
                
                <!-- TODO: FTL/Vue logic to iterate over meetingsStore.activeList -->
            </container>
        </container>
    </widgets>
</screen>
